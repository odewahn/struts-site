<?xml version="1.0"?>

<project    default="site"
            xmlns:j="jelly:core"
            xmlns:ant="jelly:ant"
            xmlns:maven="jelly:maven">

   <postGoal name="multiproject:clean">
      <attainGoal name="clean"/>
   </postGoal>

   <!-- No need to re-deploy the 1.0.2 and 1.1 api docs every time -->
